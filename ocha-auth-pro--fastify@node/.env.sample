# ===============================
# Server Setup
# ===============================
PORT=3002
NODE_ENV=development  # or 'production'
MESSAGE="[FASTIFY] :: Server up :: Running on port"

# ===============================
# For Resend (used in email templates)
# ===============================
FRONTEND_URL=https://your-frontend-url.com

# ===============================
# PostgreSQL
# If you're using a cloud provider (e.g., Neon, Supabase),
# use their provided hostname, credentials, and SSL settings.
# ===============================
PGHOST=your_postgres_host
PGDATABASE=your_db_name
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGPORT=5432
PGSSL_REJECT_UNAUTHORIZED=false
PGCONNECTIONTIMEOUT=4000


# ===============================
# Redis
# If you're using Redis Cloud or Upstash, adjust the connection string and password accordingly.
# ===============================
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password


# ===============================
# Resend (Email API)
# ===============================
RESEND=re_your_resend_key

# ===============================
# Argon2 Settings
# ===============================
ARGON2_TYPE=argon2id
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1

# ===============================
# Paseto Keys
# ===============================
# Generate your own key pairs with Paseto tooling
PASETO_PUBLIC_KEY_AT=...
PASETO_SECRET_KEY_AT=...

PASETO_PUBLIC_KEY_RT=...
PASETO_SECRET_KEY_RT=...

PASETO_PUBLIC_KEY_SUT=...
PASETO_SECRET_KEY_SUT=...

PASETO_PUBLIC_KEY_RPT=...
PASETO_SECRET_KEY_RPT=...

PASETO_PUBLIC_KEY_UET=...
PASETO_SECRET_KEY_UET=...

# ===============================
# Token Expiration
# ===============================
AT_TTL=60 seconds
RT_TTL=48 hours
RPT_TTL=180 seconds
